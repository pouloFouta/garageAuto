
{% extends 'admin_garage/base.html.twig' %}

{% block title %} Journal d'activités des réparations {% endblock %}

{% block body %}
<div class="container-fluid">

		<h1 class="my-5">
		Journal d'activités des réparations</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>
						Id</th>
					<th>
						Reparation</th>
					
					<th>
						Spécialité(s)</th>
					<th>
						Reparateur</th>
					<th>
						Commentaires</th>
						<th>
						Actions</th>
                        
                        
						
					

  
					{#<th>
						Actions</th>#}
				</tr>
			</thead>

			<tbody>
				{% for gestion in gestions %}

					<tr>
						<td>{{ gestion.id }}</td>
						<td>{{ gestion.reparation.description  ~ "-" }}  {{ gestion.reparation.vehicule.marque }} {{ gestion.reparation.vehicule.modele }}  </td>
						 
						<td>{{ gestion.specialite.nomSpecialite}}</td>
                        <td>{{gestion.reparateur.fullName}}</td>
                        <td>{{ gestion.commentaire }}</td>   

					
						   
                            
                            
                         
                            
                           
		
							  
								 
					
						
						
						



						<td>
							<a href="{{path('admin_gestion_edit', {'id': gestion.id}) }}" class="btn btn-primary"> 
								<i class="fas fa-edit"></i>
							</a>
							

						</td>

					</tr>


				{% endfor %}
			</tbody>

		</table>


	</div>

	

	
{% endblock %}


