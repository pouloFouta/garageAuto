{% extends 'admin_garage/base.html.twig' %}

{% block title %}Gestion des réparations!
{% endblock %}

{% block body %}
	<div class="container-fluid">

		<h1 class="my-5">
			Gestion des réparations</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>
						Id</th>
					<th>
						Vehicule</th>
					<th>
						Description</th>
					<th>
						Date entrée</th>
					<th>
						Date sortie</th>
					<th>
						Statut</th>


					<th>
						Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for reparation in reparations %}

					<tr>
						<td>{{ reparation.id }}</td>
						<td>{{ reparation.vehicule.immatriculation|upper }}</td>
						<td>{{  reparation.description }}</td>
						<td>{{ reparation.DateEntree|date("d/m/Y") }}</td>
						<td>{{  reparation.DateSortie|date("d/m/Y") }}</td>
						<td>{{ reparation.statut }}</td>


						<td>
							<a href="{{ path('admin_reparation_edit', {'id': reparation.id}) }}" class="btn btn-primary">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{ path('admin_reparation_delete', {'id': reparation.id}) }}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
							<a href="{{ path('admin_gestion_create', {'id': reparation.id}) }}" class="btn btn-warning">
								Gérer
							</a>
							

						</td>

					</tr>


				{% endfor %}
			</tbody>

		</table>


	</div>

	<a href="{{path('admin_reparation_create')}}">
		<button class="btn-success ml-5 ">
			Enregistrer une réparation
		</button>
		<a href="{{path('admin_gestion_index')}}">
		<button class="btn-success ml-5 ">
			Journal des reparations
		</button>
	</a>
{% endblock %}
