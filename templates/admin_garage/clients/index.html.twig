{% extends 'admin_garage/base.html.twig' %}

{% block title %}Gestion des clients!{% endblock %}

{% block body %}
<div class="container-fluid">

<h1 class="my-5"> Gestion des clients </h1>

<table class="table table-hover">
<thead>
    <tr>
        <th> Id</th>
        <th> Nom</th>
        <th> Prénom</th>
        <th> Email</th>
        <th> Adresse</th>
        <th> Téléphone </th>
        <th>Actions</th>
    </tr>
</thead>

<tbody>
{% for client in clients %}
      
<tr>
    <td>{{ client.id }}</td>
    <td>{{  client.nom }}</td>
    <td>{{ client.prenom }}</td>
    <td>{{  client.email }}</td>
    <td>{{  client.adresse }}</td>
    <td>{{  client.telephone }}</td>
    <td>
    <a href="#" class="btn btn-primary"> <i class="fas fa-edit"> </i> </a>
    <a href="#" class="btn btn-danger"> <i class="fas fa-trash"> </i> </a>
  
   </td>
</tr>


{% endfor %}
</tbody>

</table>


</div>
<a href="{{ path('admin_client_create') }} "> <button class="btn-success ml-5 ">  Ajouter un client  </button> </a> 

{% endblock %}
