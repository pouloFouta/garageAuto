{% extends 'admin_garage/base.html.twig' %}

{% block title %}Gestion des commandes{% endblock %}

{% block body %}
<div class="container-fluid">

<h1 class="my-5"> Gestion des commandes </h1>

<table class="table table-hover">
<thead>
    <tr>
        <th> Id</th>
        <th> Date commande</th>
        <th> Etat</th>
        <th> Fournisseur</th>
        {#<th> Téléphone </th>#}
        <th>Actions</th>
    </tr>
</thead>

<tbody>
{% for commande in commandes %}
      
<tr>
    <td>{{ commande.id }}</td>
    <td>{{  commande.dateCommande|date("d/m/Y") }}</td>
    <td>{{ commande.etat }}</td>
    <td>{{  commande.fournisseur }}</td>
   
    <td>
    <a href="{{path('admin_commandes_edit', {'id': commande.id}) }}" class="btn btn-primary"> <i class="fas fa-edit"> </i> </a>
    <a href="{{path('admin_commandes_delete', {'id': commande.id}) }}" class="btn btn-danger"> <i class="fas fa-trash"> </i> </a>
  
   </td>
</tr>


{% endfor %}
</tbody>

</table>


</div>
<a href="{{ path('admin_commandes_create') }} "> <button class="btn-success ml-5 ">  Créer une commande  </button> </a> 

{% endblock %}
